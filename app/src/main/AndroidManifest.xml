<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.qhs.myplayer">

    <!--  Permission required for Downloading Files  -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--  Permission required for Checking Internet Connection  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--  Permission required for Reading Writing SD Card/Memory  -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MusicsActivity" />
        <activity android:name=".Play1Activity" />
        <activity android:name=".PlayListActivity" />
        <activity android:name=".RecyclerActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".DownloadDialogActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".RenameDialogActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".DeleteDialogActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".PlayListDialogActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
    </application>

</manifest>